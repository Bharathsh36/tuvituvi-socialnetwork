

<div class="bg ui image fluid" style="background:url('<%= @user.background.url%>') fixed no-repeat center; background-size:cover; width:100%; height:20%; padding: 10% 90px 8% 90px;">
	<div id="intro_holder" style="opacity:100;">
		<%= render 'intro'%>
	</div>
</div>
<br>

<div class="ui grid">
		<div class="sixteen wide tablet three wide computer column" style="border-right:1px solid #aaa;">
		<h3>My Dreams</h3>
               <% @user.dreams.each do |dream| %>
               <%= dream.dream %> 
               <div class="ui divider"></div>  
               <% end %>
		</div>	


		<div class='sixteen wide tablet eight wide computer column'>
		<div id="posts">
		<h1>Activity</h1>
			<%= render @posts %>
			</div>
			<%= will_paginate @posts %>

		</div>

			<div class="sixteen wide tablet five wide computer column">
				<%= render 'photos'%>
			</div>

</div>
<script type="text/javascript">
	$('.ui.sticky')
        .sticky()
      ;
</script>