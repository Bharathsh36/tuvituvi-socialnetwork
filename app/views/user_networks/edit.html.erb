<div class="page-header">
	<h1>Viewing networks</h1>
</div>

<% if @user_network.requested? %>
	<h3>Do you really want to be friends with <%= @friend.first_name %>?</h3>
	<% end %>

	<% if @user_network.accepted? %>
		<h3>You are friends with <%= @friend.first_name %></h3>
	<% end %>

	<div class="form-actions">
		<%= @user_network.id %>
		<% if @user_network.requested? %>
			<%= form_for @user_network, url: accept_user_network_path(@user_network), method: :put do |form| %>
			<%= submit_tag "Accept network", class: "button radius" %>
			<% end %>
		<% end %>

		<%= form_for @user_network, url: user_network_path(@user_network), method:
		:delete do |form| %>
			<%= submit_tag "Delete network", class: "button radius tiny" %>
		<% end %>

	</div>
