
<div class="ui segment", style= 'margin:7%;'>
<div class="ui grid">
<div class="three wide column violet"><%= link_to :back , class: 'ui white button' do %> <i class="arrow left icon"></i> Back<% end %>
<div class="ui fluid vertical menu">
<div class="item">
  Security
</div>
<div class="item">
  Privacy
