<div class="container" style="margin-top:100px;">
<div class="segment">
<div class="ui sixteen wide grid">
<% @posts.each do |post| %>
	<% if post.image.present? %>
		<div class="one wide column">
		<%= image_tag post.image.url(:medium), class:'ui image small' %>
		</div>
	<% end %>
<% end %>
</div>
</div>
</div>
